<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.temple.mcireminderapps.simplev2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_purple"
        android:label="SIMPLE"
        android:roundIcon="@mipmap/ic_launcher_purple_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="edu.temple.mci_res_lib2.activities.AlarmListActivity" />
        <activity android:name="edu.temple.mci_res_lib2.activities.AlarmDetailActivity" />
        <activity android:name="edu.temple.mci_res_lib2.activities.TaskPromptActivity" />

        <receiver android:name="edu.temple.mci_res_lib2.alarms.AlarmReceiver" android:enabled="true"></receiver>

    </application>

</manifest>