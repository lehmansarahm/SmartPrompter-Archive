<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context=".activities.ConfigAudioActivity">

    <TextView
        android:id="@+id/export_config_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Configuration:"
        android:gravity="center"
        android:padding="@dimen/title_padding"
        android:textSize="@dimen/title_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/line_break_size"
        android:text="@string/line_break_double" />

    <LinearLayout
        android:id="@+id/next_export_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/subtitle_size"
            android:textStyle="bold"
            android:text="Next Export Scheduled For:" />

        <TextView
            android:id="@+id/next_export_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/subtitle_size"
            android:text="NO EXPORT SCHEDULED" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/line_break_size"
            android:text="@string/line_break_single" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/label_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/subtitle_size"
            android:textStyle="bold"
            android:text="Device Label:" />

        <TextView
            android:id="@+id/device_label_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/subtitle_size"
            android:text="NO LABEL ASSIGNED"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/line_break_size"
            android:text="@string/line_break_single" />

    </LinearLayout>

    <Button
        android:id="@+id/export_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push Logs to Email"
        android:padding="@dimen/button_padding" />

</LinearLayout>